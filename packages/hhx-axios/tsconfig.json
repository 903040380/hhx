{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "*":["src/*"],
    }
  },
  "compileOnSave": true,
  "include": ["src/*"],
}
